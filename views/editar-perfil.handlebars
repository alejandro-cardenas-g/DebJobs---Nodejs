<main class="contenedor">

    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">

        <div class="campo">
            
            <label for="">Nombre</label>
            <input type="text" name="nombre"  value={{usuario.nombre}} placeholder="Tu nombre">

        </div>

        <div class="campo">
                
            <label for="">Email</label>
            <input type="email" name="email" value={{usuario.email}} placeholder="Tu correo">

        </div>

        <div class="campo">
                
            <label for="">Contraseña</label>
            <input type="password" name="password" placeholder="Tu contraseña">

        </div>

        <div class="campo">

            <label for="">Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
            <img src="/uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="">
        </div>

        <div class="campo">
                
            <input type="submit" value="Guardar cambios" class="btn btn-azul">

        </div>

    </form>

</main>